<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vj.praktikum_15.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/butt7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Onklick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/butt8"
        android:layout_alignTop="@+id/butt7"
        android:layout_toRightOf="@+id/butt7"
        android:layout_toEndOf="@+id/butt7"
        android:onClick="Onklick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/butt9"
        android:layout_alignTop="@+id/butt8"
        android:layout_toRightOf="@+id/butt8"
        android:layout_toEndOf="@+id/butt8"
        android:onClick="Onklick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/butt4"
        android:layout_below="@+id/butt7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Onklick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/butt5"
        android:layout_alignBottom="@+id/butt4"
        android:layout_alignLeft="@+id/butt8"
        android:layout_alignStart="@+id/butt8"
        android:onClick="Onklick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/butt6"
        android:layout_alignTop="@+id/butt5"
        android:layout_toRightOf="@+id/butt5"
        android:layout_toEndOf="@+id/butt5"
        android:onClick="Onklick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/butt1"
        android:layout_below="@+id/butt4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="Onklick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/butt2"
        android:layout_below="@+id/butt4"
        android:layout_toRightOf="@+id/butt1"
        android:layout_toEndOf="@+id/butt1"
        android:onClick="Onklick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/butt3"
        android:layout_below="@+id/butt5"
        android:layout_toRightOf="@+id/butt2"
        android:layout_toEndOf="@+id/butt2"
        android:onClick="Onklick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/butt0"
        android:layout_below="@+id/butt2"
        android:layout_alignLeft="@+id/butt2"
        android:layout_alignStart="@+id/butt2"
        android:onClick="Onklick"/>

</RelativeLayout>
